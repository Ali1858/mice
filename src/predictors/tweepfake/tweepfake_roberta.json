{
    "dataset_reader": {
        "type": "tweepfake",
        "token_indexers": {
            "tokens": {
                "type": "pretrained_transformer",
                "max_length": 128,
                "model_name": "roberta-large"
            }
        },
        "tokenizer": {
            "type": "pretrained_transformer",
            "max_length": 128,
            "model_name": "roberta-large"
        }
    },
    "model": {
        "type": "vmasker_classifier",
        "namespace": "tags",
        "seq2vec_encoder": {
            "type": "bert_pooler",
            "dropout": 0.1,
            "pretrained_model": "roberta-large"
        },
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "pretrained_transformer",
                    "max_length": 128,
                    "model_name": "roberta-large"
                }
            }
        }
    },
    "train_data_path": "src/predictors/tweepfake/train.csv",
    "test_data_path": "src/predictors/tweepfake/test.csv",
    "validation_data_path": "src/predictors/tweepfake/validation.csv",
    "trainer": {
        "num_epochs": 1,
        "validation_metric": "+accuracy",
        "epoch_callbacks" : ["track_epoch_callback"],
	 "learning_rate_scheduler": {
	    "type": "slanted_triangular",
	    "cut_frac": 0.06		
	},
        "optimizer": {
            "type": "huggingface_adamw",
            "lr": 2e-05,
            "weight_decay": 0.1
        }
    },
    "data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 8,
            "sorting_keys": [
                "tokens"
            ]
        }
    },
    "validation_data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 16,
            "sorting_keys": [
                "tokens"
            ]
        }
    }
}
